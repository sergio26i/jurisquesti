                </div>
                <!--sign-in----------------------------->
                <a href="/index" class="sign-in">Voltar para a Página Inicial</a>
                </nav>
            </section>

            <div class = "home-box custom-box">
                <h3>Instrução: </h3>
                <p>Número Total de Questões: <span class = "total-question">5</span></p>
                <button type = "button" class = "btn"  onclick= "startQuiz()">Dar início ao Teste</button>
            </div>

            <div class = "quiz-box custom-box hide">
                <div class = "question-number">
                    
                </div>
                <div class = "question-text">
                     
                </div>
                <div class = "option-container">
                   
                </div>
                <div class = "next-question-btn">
                    <button type = "button" class = "btn" onclick="next()">Próxima</button>
                </div>
                <div class = "answers-indicator">
                    
                </div>
            </div>

            <div class = "result-box custom-box hide">
                <table>
                <h1>Boletim de Desempenho</h1>
                    <tr>
                        <td>Total de Questões</td>
                        <td><span class="total-question"></span></td>
                    </tr>
                    <tr>
                        <td>Tentativas</td>
                        <td><span class="total-attempt"></span></td>
                    </tr>
                    <tr>
                        <td>Corretas</td>
                        <td><span class="total-correct"></span></td>
                    </tr>
                    <tr>
                        <td>Erradas</td>
                        <td><span class="total-wrong"></span></td>
                    </tr>
                    <tr>
                        <td>Porcentagem</td>
                        <td><span class="percentage"></span></td>
                    </tr>
                    <tr>
                        <td>Seu Placar</td>
                        <td><span class="total-score"></span></td>
                    </tr>
                </table>
                <button type="button"   class="btn-01" onclick = "tryAgainQuiz()">Tentar de Novo</button>
                <button type="button"   class="btn-02" onclick = "goToHome()">Voltar Para o Início</button>
            </div>
            
